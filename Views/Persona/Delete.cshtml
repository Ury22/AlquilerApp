@model AlquilerApp.Models.Persona

@{
ViewData["Title"] = "Eliminar Persona";
}

<!-- Carga de Bootstrap (NOTA: En un proyecto ASP.NET Core real, este enlace debería estar en el _Layout.cshtml) -->

<link href="https://www.google.com/search?q=https://cdn.jsdelivr.net/npm/bootstrap%405.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Estilos personalizados para la vista de eliminación -->

<style>
body {
background-color: #f7f9fc;
font-family: 'Inter', sans-serif;
}
.delete-panel {
background-color: #ffffff;
padding: 2.5rem; /* p-8 /
border-radius: 0.75rem; / rounded-xl /
box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175); / shadow-lg /
border-left: 5px solid #dc3545; / Advertencia visual sutil */
}
</style>

<div class="container py-5">
<div class="delete-panel mx-auto" style="max-width: 700px;">

    <h1 class="h3 fw-bold mb-3 text-dark">Eliminar Persona</h1>

    <h3 class="h5 fw-semibold text-danger mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i> ¿Estás seguro de que quieres eliminar esta persona? Esta acción es permanente.
    </h3>

    <!-- Detalles de la Persona (Usando el Grid de Bootstrap para la DL) -->
    <dl class="row g-3 border-top pt-3">
        
        <!-- Nombres -->
        <dt class="col-sm-4 text-secondary small fw-medium">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-8 text-dark fw-bold">
            @Html.DisplayFor(model => model.Nombres)
        </dd>

        <!-- Apellidos -->
        <dt class="col-sm-4 text-secondary small fw-medium">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-8 text-dark fw-bold">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        
        <!-- NoIdentidad -->
        <dt class="col-sm-4 text-secondary small fw-medium">
            @Html.DisplayNameFor(model => model.NumIdentidad)
        </dt>
        <dd class="col-sm-8 text-dark">
            @Html.DisplayFor(model => model.NumIdentidad)
        </dd>

        <!-- Sexo -->
        <dt class="col-sm-4 text-secondary small fw-medium">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-8 text-dark">
            @Html.DisplayFor(model => model.Sexo!.SexoNombre)
        </dd>

        <!-- Ciudad (con País) -->
        <dt class="col-sm-4 text-secondary small fw-medium">
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>
        <dd class="col-sm-8 text-dark">
            @Html.DisplayFor(model => model.Ciudad!.CiudadNombre) (<span class="text-primary">@Html.DisplayFor(model => model.Ciudad!.Pais!.PaisNombre)</span>)
        </dd>
        
    </dl>
    
    <!-- Formulario y Botones -->
    <form asp-action="Delete" class="mt-4 d-flex gap-3">
        <input type="hidden" asp-for="NumIdentidad" />
        <!-- Botón de Confirmación (ROJO DESTRUTIVO) -->
        <button type="submit" class="btn btn-danger fw-semibold px-4 py-2 shadow-sm">
            <i class="fas fa-trash-alt me-1"></i> Eliminar
        </button>
        <!-- Botón de Cancelar (Secundario) -->
        <a asp-action="Index" class="btn btn-outline-secondary fw-semibold px-4 py-2 shadow-sm">
            Cancelar
        </a>
    </form>
</div>


</div>

@section Scripts {
<!-- Script de Bootstrap (Asumiendo que no está en el layout) -->
<script src="https://www.google.com/search?q=https://cdn.jsdelivr.net/npm/bootstrap%405.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
}