@model AlquilerApp.Models.Persona

@{
ViewData["Title"] = "Detalles de Persona";
}

<!-- Carga de Bootstrap (NOTA: En un proyecto ASP.NET Core real, este enlace debería estar en el _Layout.cshtml) -->

<link href="https://www.google.com/search?q=https://cdn.jsdelivr.net/npm/bootstrap%405.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Estilos personalizados para la vista de detalles -->

<style>
body {
background-color: #f7f9fc;
font-family: 'Inter', sans-serif;
}
.details-panel {
background-color: #ffffff;
padding: 2.5rem; /* p-8 /
border-radius: 0.75rem; / rounded-xl /
box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1); / shadow-lg /
}
.dl-horizontal dt {
font-weight: 500;
color: #6c757d; / text-gray-500 /
}
.dl-horizontal dd {
font-weight: 600;
color: #212529; / text-gray-900 */
}
</style>

<div class="container py-5">
<h1 class="h3 fw-bold mb-4 text-dark text-center">Detalles de Persona</h1>

<div class="details-panel mx-auto" style="max-width: 700px;">
    <h2 class="h5 mb-4 border-bottom pb-2 text-primary">Información General</h2>
    
    <!-- Detalles de la Persona (Usando el Grid de Bootstrap para la DL) -->
    <dl class="row g-3 dl-horizontal">
        
        <!-- Nombres -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Nombres)
        </dd>

        <!-- Apellidos -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>

        <!-- NoIdentidad -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NumIdentidad)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.NumIdentidad)
        </dd>

        <!-- Email -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <!-- Telefono -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Telefono)
        </dd>

        <!-- FechaNacimiento -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class="col-sm-8">
            @(Model.FechaNacimiento.HasValue ? Model.FechaNacimiento.Value.ToShortDateString() : "N/A")
        </dd>

        <!-- Sexo -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Sexo!.SexoNombre)
        </dd>

        <!-- Ciudad (con País) -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>
        <dd class="col-sm-8">
            <span class="text-info">@Html.DisplayFor(model => model.Ciudad!.CiudadNombre)</span> (<span class="text-secondary">@Html.DisplayFor(model => model.Ciudad!.Pais!.PaisNombre)</span>)
        </dd>

    </dl>
</div>

<!-- Botones de Acción -->
<div class="mt-4 d-flex gap-3 justify-content-center">
    <!-- Botón Editar (Amarillo/Warning) -->
    <a asp-action="Edit" asp-route-id="@Model?.NumIdentidad" class="btn btn-warning text-white fw-semibold px-4 py-2 shadow-sm">
        <i class="fas fa-edit me-1"></i> Editar
    </a>
    <!-- Botón Volver a la Lista (Secundario) -->
    <a asp-action="Index" class="btn btn-outline-secondary fw-semibold px-4 py-2 shadow-sm">
        <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
    </a>
</div>


</div>

@section Scripts {
<!-- Script de Bootstrap (Asumiendo que no está en el layout) -->
<script src="https://www.google.com/search?q=https://cdn.jsdelivr.net/npm/bootstrap%405.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
}