@model AlquilerApp.Models.Vivienda

@{
    ViewData["Title"] = "Crear Vivienda";
}

<!--
    NOTA: Se asume que los enlaces de Bootstrap 5 y Font Awesome (fas, fa-solid)
    están correctamente referenciados en el archivo _Layout.cshtml.
-->

<div class="container py-5">
    <h1 class="fs-2 fw-bolder mb-4 text-dark text-center">Registro de Nueva Vivienda</h1>

    <div class="row justify-content-center">
        <!-- Contenedor del formulario centrado y con ancho limitado -->
        <div class="col-xl-7 col-lg-8 col-md-10">
            <!-- Card con sombra suave y esquinas redondeadas -->
            <div class="card shadow-lg p-md-5 p-4 rounded-4 border-0 bg-light">
                <form asp-action="Create">
                    
                    <!-- Diagnóstico y Errores -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <!-- Mensaje de advertencia estilizado -->
                        <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Campos del Formulario Organizados en Fila -->
                    <div class="row">
                        
                        <!-- Columna 1 (Identificación) -->
                        <div class="col-md-6">
                            <h5 class="fw-bold text-secondary border-bottom border-primary pb-2 mb-3">Identificación</h5>
                            
                            <div class="mb-3">
                                <label asp-for="CodigoVivienda" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    <input asp-for="CodigoVivienda" class="form-control" placeholder="Ej: VIV-001" />
                                </div>
                                <span asp-validation-for="CodigoVivienda" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Propietario" class="form-label fw-bold">Propietario</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                                    <!-- Uso de form-select para listas desplegables -->
                                    <select asp-for="Propietario" class="form-select" asp-items="ViewBag.Propietario">
                                        <option value="">-- Seleccione Propietario --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Propietario" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="NumVivienda" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                                    <input asp-for="NumVivienda" type="number" class="form-control" placeholder="Ej: 101" />
                                </div>
                                <span asp-validation-for="NumVivienda" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NumCalle" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-road"></i></span>
                                    <input asp-for="NumCalle" class="form-control" placeholder="Ej: Alameda Central" />
                                </div>
                                <span asp-validation-for="NumCalle" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Columna 2 (Capacidades) -->
                        <div class="col-md-6">
                            <h5 class="fw-bold text-secondary border-bottom border-primary pb-2 mb-3">Capacidades</h5>
                            
                            <div class="mb-3">
                                <label asp-for="NumBloque" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                    <input asp-for="NumBloque" class="form-control" placeholder="Ej: A-5" />
                                </div>
                                <span asp-validation-for="NumBloque" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CapacidadPersonas" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-users"></i></span>
                                    <input asp-for="CapacidadPersonas" type="number" class="form-control" placeholder="Máximo de personas" />
                                </div>
                                <span asp-validation-for="CapacidadPersonas" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CantDormitorios" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-bed"></i></span>
                                    <input asp-for="CantDormitorios" type="number" class="form-control" placeholder="Cantidad de dormitorios" />
                                </div>
                                <span asp-validation-for="CantDormitorios" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CantBanios" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-bath"></i></span>
                                    <input asp-for="CantBanios" type="number" class="form-control" placeholder="Cantidad de baños" />
                                </div>
                                <span asp-validation-for="CantBanios" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!-- CAMPO DE CIUDAD AGREGADO AQUÍ -->
<div class="mb-3">
    <label asp-for="IdCiudad" class="form-label fw-bold">Ciudad</label>
    <div class="input-group">
        <span class="input-group-text"><i class="fas fa-city"></i></span>
        <select asp-for="IdCiudad" class="form-select" asp-items="ViewBag.IdCiudad">
            <option value="">-- Seleccione Ciudad --</option>
        </select>
    </div>
    <span asp-validation-for="IdCiudad" class="text-danger"></span>
</div>

<!-- FIN CAMPO DE CIUDAD -->


                    <!-- Descripcion Vivienda (Ancho Completo) -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-secondary border-bottom border-primary pb-2 mb-3 mt-3">Detalles Adicionales</h5>
                        <label asp-for="DescripcionVivienda" class="form-label fw-bold"></label>
                        <textarea asp-for="DescripcionVivienda" class="form-control" rows="4" placeholder="Describe las comodidades, cercanía a puntos de interés, y reglas especiales."></textarea>
                        <span asp-validation-for="DescripcionVivienda" class="text-danger"></span>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-flex justify-content-between mt-5 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4 py-2 rounded-pill">
                            <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
                        </a>
                        <button type="submit" class="btn btn-primary shadow-sm px-4 py-2 rounded-pill">
                            <i class="fas fa-house-user me-1"></i> Registrar Vivienda
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}