@model IEnumerable<AlquilerApp.Models.Ciudad>

@{
    ViewData["Title"] = "Ciudades";
}

<div class="container my-5">
    <h1 class="display-4 mb-4 text-primary fw-bold">Gestión de Ciudades</h1>

    <!-- Botón de Creación -->
    <p>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="fas fa-plus-circle"></i> Crear Nueva Ciudad
        </a>
    </p>
    
    <!-- Contenedor de Tarjetas (Responsive Grid) -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-lg transform-hover">
                        <div class="card-body">
                            <!-- Título Principal: Nombre de la Ciudad -->
                            <h5 class="card-title text-dark fw-bold mb-1">
                                @Html.DisplayFor(modelItem => item.CiudadNombre)
                            </h5>
                            <!-- Subtítulo: Nombre del País -->
                            <h6 class="card-subtitle mb-3 text-muted">
                                País: @Html.DisplayFor(modelItem => item.Pais!.PaisNombre)
                            </h6>
                            
                            <hr class="my-3"/>

                            <!-- *** BLOQUE DE IDs ELIMINADO AQUÍ *** -->
                            
                        </div>
                        <div class="card-footer bg-light border-0 d-flex justify-content-end gap-2 p-3">
                            <!-- Botones de Acción -->
                            <a asp-action="Edit" asp-route-id="@item.IdCiudad" class="btn btn-warning btn-sm shadow-sm" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdCiudad" class="btn btn-info btn-sm shadow-sm" title="Detalles">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdCiudad" class="btn btn-danger btn-sm shadow-sm" title="Borrar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="alert alert-info">No hay ciudades registradas. Crea una nueva para empezar.</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <!-- Incluimos Font Awesome para iconos si aún no está en el _Layout -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        /* Estilo para el efecto de sombra y transformación al pasar el ratón */
        .transform-hover {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
        }
        .transform-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }
        .text-xs {
            font-size: 0.75rem;
        }
    </style>
}