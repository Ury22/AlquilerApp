@model AlquilerApp.Models.Rol

@{
    ViewData["Title"] = "Crear Nuevo Rol";
}

<div class="container my-5">
    <h1 class="display-4 mb-4 text-success fw-bold">Crear Nuevo Rol</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="RolNombre" class="form-label fw-bold"></label>
                        <input asp-for="RolNombre" class="form-control" placeholder="Ej: Propietario, Inquilino, Administrador" />
                        <span asp-validation-for="RolNombre" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-lg shadow-sm">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}