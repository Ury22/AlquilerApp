@model AlquilerApp.Models.Sexo

@{
    ViewData["Title"] = "Eliminar Género/Sexo";
}

<div class="container my-5">
    <h1 class="display-4 mb-4 text-danger fw-bold">Eliminar Género / Sexo</h1>

    <h3 class="text-secondary mb-4">¿Estás seguro que deseas eliminar el género: **@Model.SexoNombre**?</h3>
    <p class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Esta acción es permanente y puede afectar a las personas que usan esta clasificación.
    </p>
    <hr />
    
    <div class="card shadow-lg p-4 bg-light">
        <dl class="row">
            
            <dt class = "col-sm-3 text-muted">
                @Html.DisplayNameFor(model => model.SexoNombre)
            </dt>
            <dd class = "col-sm-9 fw-bold">
                @Html.DisplayFor(model => model.SexoNombre)
            </dd>
            
            <!-- SECCIÓN ELIMINADA: Ocultamos el ID del género/sexo -->
            @*
            <dt class = "col-sm-3 text-muted mt-3 pt-3 border-top">
                ID
            </dt>
            <dd class = "col-sm-9 mt-3 pt-3 border-top">
                @Html.DisplayFor(model => model.IdSexo)
            </dd>
            *@
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <!-- CRÍTICO: Mantenemos el campo oculto para que el controlador reciba el ID a eliminar -->
        <input type="hidden" asp-for="IdSexo" /> 
        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
            <i class="fas fa-trash-alt"></i> Confirmar Eliminación
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left"></i> Cancelar
        </a>
    </form>
</div>