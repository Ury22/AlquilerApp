@model IEnumerable<AlquilerApp.Models.Sexo>

@{
    ViewData["Title"] = "Gestión de Géneros/Sexos";
}

<div class="container my-5">
    <h1 class="display-4 mb-4 text-primary fw-bold">Catálogo de Géneros / Sexos</h1>

    <!-- Botón de Creación -->
    <p>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="fas fa-plus-circle"></i> Crear Nuevo Género
        </a>
    </p>
    
    <!-- Contenedor de Tarjetas (Responsive Grid) -->
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-lg transform-hover">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <!-- Título Principal: Nombre del Sexo -->
                                <h5 class="card-title text-dark fw-bold mb-1">
                                    @Html.DisplayFor(modelItem => item.SexoNombre)
                                </h5>
                                
                                <!-- ID (Opcional) - ELIMINADA ESTA LÍNEA PARA OCULTAR EL ID EN EL ÍNDICE -->
                                @* <p class="text-xs text-muted mb-0">ID: @Html.DisplayFor(modelItem => item.IdSexo)</p> *@
                            </div>
                        </div>
                        <div class="card-footer bg-light border-0 d-flex justify-content-end gap-2 p-3">
                            <!-- Botones de Acción -->
                            <a asp-action="Edit" asp-route-id="@item.IdSexo" class="btn btn-warning btn-sm shadow-sm" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdSexo" class="btn btn-info btn-sm shadow-sm" title="Detalles">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdSexo" class="btn btn-danger btn-sm shadow-sm" title="Borrar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="alert alert-info">No hay géneros/sexos registrados. Crea uno nuevo para empezar.</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <!-- Incluimos Font Awesome y el CSS para el efecto de hover -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .transform-hover {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
        }
        .transform-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }
        .text-xs {
            font-size: 0.75rem;
        }
    </style>
}