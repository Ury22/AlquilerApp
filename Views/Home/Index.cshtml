@{
    ViewData["Title"] = "Panel de Gestión de Alquileres";
}

<div class="container py-5">
    <!-- Header Moderno -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-white p-4 rounded-3 shadow" style="background: linear-gradient(90deg, #4e54c8, #8f94fb);">
            <i class="fas fa-building me-3"></i> Bienvenido al Sistema de Gestión de Alquileres
        </h1>
        <p class="lead text-muted mt-3">Seleccione la sección a la que desea acceder para administrar los datos.</p>
    </div>

    <!-- Sección de Opciones con Tarjetas Modernas -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">

        <!-- 1. Viviendas -->
        <div class="col">
            <div class="card h-100 border-0 shadow hover-lift-card text-center">
                <div class="card-body p-5" style="background: #ffffff; border-radius: 1rem;">
                    <i class="fas fa-home fa-5x text-primary mb-4 icon-bounce"></i>
                    <h5 class="card-title fw-bold">Gestión de Viviendas</h5>
                    <p class="card-text text-secondary">Administre el listado completo de propiedades disponibles, incluyendo detalles, edición y eliminación.</p>
                    <a asp-controller="Vivienda" asp-action="Index" class="btn btn-primary btn-lg mt-3 w-100 fw-bold hover-btn">
                        Ir a Viviendas <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- 2. Personas -->
        <div class="col">
            <div class="card h-100 border-0 shadow hover-lift-card text-center">
                <div class="card-body p-5" style="background: #ffffff; border-radius: 1rem;">
                    <i class="fas fa-user-tie fa-5x text-success mb-4 icon-bounce"></i>
                    <h5 class="card-title fw-bold">Gestión de Personas</h5>
                    <p class="card-text text-secondary">Administre los datos de las personas que poseen y listan las propiedades en el sistema.</p>
                    <a asp-controller="Persona" asp-action="Index" class="btn btn-success btn-lg mt-3 w-100 fw-bold hover-btn">
                        Ir a Personas <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- 3. Alquileres -->
        <div class="col">
            <div class="card h-100 border-0 shadow hover-lift-card text-center">
                <div class="card-body p-5" style="background: #ffffff; border-radius: 1rem;">
                    <i class="fas fa-file-contract fa-5x text-info mb-4 icon-bounce"></i>
                    <h5 class="card-title fw-bold">Contratos de Alquiler</h5>
                    <p class="card-text text-secondary">Revise y cree nuevos contratos, gestionando fechas de inicio y finalización, y montos.</p>
                    <a asp-controller="Alquiler" asp-action="Index" class="btn btn-info btn-lg text-white mt-3 w-100 fw-bold hover-btn">
                        Ir a Contratos <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- 4. Reportes (NUEVA SECCIÓN) -->
        <div class="col">
            <div class="card h-100 border-0 shadow hover-lift-card text-center">
                <div class="card-body p-5" style="background: #ffffff; border-radius: 1rem;">
                    <i class="fas fa-chart-line fa-5x text-warning mb-4 icon-bounce"></i>
                    <h5 class="card-title fw-bold">Generación de Reportes</h5>
                    <p class="card-text text-secondary">Acceda a análisis y resúmenes de datos para tomar decisiones informadas sobre la gestión.</p>
                    <!-- CORRECCIÓN CLAVE: asp-action debe ser "Index" -->
                    <a asp-controller="Reporte" asp-action="Index" class="btn btn-warning btn-lg text-white mt-3 w-100 fw-bold hover-btn">
                        Generar Reportes <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</div>

@section Scripts {
<style>
    /* Efecto de elevación para las tarjetas */
    .hover-lift-card {
        transition: transform 0.35s ease, box-shadow 0.35s ease;
    }
    .hover-lift-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.25) !important;
    }

    /* Animación suave para iconos */
    .icon-bounce {
        animation: bounce 2s infinite;
    }
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-10px); }
        60% { transform: translateY(-5px); }
    }

    /* Botones con efecto hover */
    .hover-btn {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style>
}